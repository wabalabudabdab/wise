---
interface Props {
	text: string;
}

const { text } = Astro.props;
---

<li class="link-card">
		<p>
			{text}
		</p>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-position: 100%;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

</style>
